{
  "name": "real_training",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
        {"type": "AddNoise", "args": {"p": 0.2, "snr_min": 10, "snr_max": 25}},
        {"type": "HighPass", "args": {"p": 0.2, "freq_min": 10, "freq_max": 500}},
        {"type": "LowPass", "args": {"p": 0.2, "freq_min": 1000, "freq_max": 8000}},
        {"type": "ChangeLoudness", "args": {"p": 0.2, "min_top": 0.5, "max_top": 1}}
    ],
    "spectrogram": []
  },
  "arch": {
    "type": "MyModel",
    "args": {
      "n_feats": 128,
      "recurrent_layers": 5,
      "gru_hidden_size": 1000
    }
  },
  "data": {
    "train": {
      "batch_size": 20,
      "num_workers": 2,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-other-500",
            "max_audio_length": 20.0,
            "max_text_length": 500
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 2, 
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other"
          }
        }
      ]
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 1e-4,
      "weight_decay": 1e-2
    }
  },
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 2000,
      "gamma": 0.91
    }
  },
  "trainer": {
    "epochs": 50000,
    "save_dir": "saved/",
    "save_period": 10,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10000,
    "visualize": "wandb",
    "wandb_project": "dla_asr",
    "len_epoch": 500,
    "grad_norm_clip": 10
  }
}
